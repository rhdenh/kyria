#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
	keymap {
		compatible = "zmk,keymap";

		default_layer {
// ---------------------------------------------------------------------------------------------------------------------------------
// |  ESC  |  Q  |  W  |  E   |  R   |  T   |                                          |  Y   |  U    |  I    |  O   |   P   |   \  |
// |  TAB  |  A  |  S  |  D   |  F   |  G   |                                          |  H   |  J    |  K    |  L   |   ;   |   '  |
// | SHIFT |  Z  |  X  |  C   |  V   |  B   | L SHIFT | L SHIFT |  | L SHIFT | L SHIFT |  N   |  M    |  ,    |  .   |   /   | CTRL |
//                     | GUI  | DEL  | RET  |  SPACE  |   ESC   |  |   RET   |  SPACE  | TAB  | BSPC  | R-ALT |
			bindings = <
	&kp ESC   &kp Q &kp W &kp E &kp R &kp T                                                &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSPC
	&kp TAB   &kp A &kp S &kp D &kp F &kp G                                                &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
	&kp LSHFT &kp Z &kp X &kp C &kp V &kp B &kp LPAR &kp RPAR        &kp AT &kp EXCL &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp RSHFT
	                 &kp C_AC_ZOOM &kp LCTRL &kp SPACE &kp LSHT &mo 1       &mo 1 &kp RET &kp SPACE &kp DEL &kp RGUI
			>;

		};
		lower_layer {
			bindings = <
	&bt BT_NXT &kp HASH &kp DLLR &kp PRCNT &kp AMPS &kp K_CALC                       &kp STAR &kp N7  &kp N8     &kp N9   &kp PLUS  &kp CLEAR
	&kp C_RESET   &kp A &kp S &kp D &kp BSLH &kp &mo 1                                  &kp FSLH &kp N4  &kp N5     &kp N6   &kp MINUS &kp PLUS
	&kpnone &kpnone &kpnone &kpnone &kpnone &kp B &kp LBKT &kp RBKT        &kp UP &kp LEFT &kp N0 &kp N1  &kp N2 &kp N3 &kp EQUAL &kp EQUAL
	             &kp LGUI &kp LALT &kpnone &kpnone &kpnone       &kp DOWN   &kp RIGHT &kp HOME &kp END &kp RGUI
			>;
		};
	};
};
